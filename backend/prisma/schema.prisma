generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  fullName     String?
  passwordHash String
  role         String   @default("CLINICIAN")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// Schema-less entities to match the existing frontend payloads quickly.
// We store the original object as a JSON string in `data`.
model ClinicSettings {
  id        String   @id @default(cuid())
  data      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Patient {
  id        String   @id @default(cuid())
  data      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
}

model Session {
  id        String   @id @default(cuid())
  data      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
}

model MedicalRecord {
  id        String   @id @default(cuid())
  data      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
}

model FinancialTransaction {
  id        String   @id @default(cuid())
  data      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
}
